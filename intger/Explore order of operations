 // to find remainder
 double a=5,b=4,c=3;
 double d=(a+b)%c;
Console.WriteLine(d);


// to find the maximum and minimum limit of integer
int max=int.MaxValue;
int min=int.MinValue;
Console.WriteLine(max);
Console.WriteLine(min);

we can use the same approach to find the maximum and minimum for particular data type

// interpolation used to print values
eg:- int max=int.MaxValue;
int min=int.MinValue;
Console.WriteLine($"the maximum value is {max}and the minimum value is {min}");

// so when the integer limit is overflowd it slips to it's opposite
int max=int.MaxValue;
int min=int.MinValue;
int where=max;
Console.WriteLine(where);


// double
double a=10,b=3;
Console.WriteLine(a/b);

// it have bigger value than intger
decimal a=10,b=3;
decimal final=a/b;
Console.WriteLine(final);


// to find max and minimum of the decimal
decimal min=decimal.MaxValue;
decimal max=decimal.MinValue;
Console.WriteLine($"the minimum value is {min} and maximum value is {max}");


// short 
short min=short.MaxValue;
short max=short.MinValue;
Console.WriteLine($"the minimum value short is {min} and maximum value of short is {max}");

